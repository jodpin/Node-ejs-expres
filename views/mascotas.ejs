<%- include("templates/cabecera", {tituloWeb: "mascotas"}) %> 

<div class="container">
    <% if (arrayMascotas.length) { %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Description</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
              <% if (arrayMascotas.length > 0) { %> <% arrayMascotas.forEach(mascota => { %>
              <tr>
                <td><%= mascota.id %> </td>
                <td><%= mascota.name %></td>
                <td><%= mascota.description %></td>
                <td><a class="btn btn-primary btn-sm" href="mascotas/<%= mascota.id %>">Editar</a></td>
              </tr>
              <% }) %> <% } %>
            </tbody>
          </table>
    <% } %>
    
</div>
   

